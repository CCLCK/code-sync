{"ast":null,"code":"import axios from 'axios';\nexport default {\n  data() {\n    return {\n      showLogin: false,\n      showRegister: false,\n      email: '',\n      password: '',\n      user: null,\n      emailError: '',\n      rememberMe: false,\n      termsAccepted: false,\n      showLoading: true // 新增的属性\n    };\n  },\n\n  methods: {\n    validateEmail() {\n      const re = /^[\\w-]+(\\.[\\w-]+)*@([\\w-]+\\.)+[a-zA-Z]{2,7}$/;\n      if (!re.test(this.email)) {\n        this.emailError = '请输入有效的电子邮件地址';\n      } else {\n        this.emailError = '';\n      }\n    },\n    login(event) {\n      this.showLoading = false;\n      console.log(this.showLoading);\n      // event.preventDefault()\n\n      axios.post('http://localhost:5400/login', {\n        email: this.email,\n        password: this.password,\n        rememberMe: this.rememberMe\n      }).then(response => {\n        this.user = response.data;\n        this.showLogin = false;\n        this.showLoading = true;\n      }).catch(error => {\n        console.error('Error logging in:', error);\n      });\n    },\n    register(event) {\n      event.preventDefault();\n      this.showLoading = false;\n      axios.post('http://localhost:5400/register', {\n        email: this.email,\n        password: this.password\n      }).then(response => {\n        this.user = response.data;\n        this.showRegister = false;\n        this.showLoading = true;\n      }).catch(error => {\n        console.error('Error registering:', error);\n      });\n    },\n    logout() {\n      this.user = null;\n      this.showLoading = true;\n    }\n  }\n};","map":{"version":3,"names":["axios","data","showLogin","showRegister","email","password","user","emailError","rememberMe","termsAccepted","showLoading","methods","validateEmail","re","test","login","event","console","log","post","then","response","catch","error","register","preventDefault","logout"],"sources":["H:\\单词学习项目\\word_study\\src\\components\\UserActions.vue"],"sourcesContent":["<template>\r\n  <div class=\"user-actions\">\r\n    <div v-if=\"!user\">\r\n      <button @click=\"showLogin = true\">登录</button>\r\n      <button @click=\"showRegister = true\">注册</button>\r\n    </div>\r\n    <div v-else>\r\n      <p>欢迎，{{ user.email }}</p>\r\n      <button @click=\"logout\">退出</button>\r\n    </div>\r\n\r\n    <div class=\"modal\" v-if=\"showLogin\">\r\n      <h2>登录</h2>\r\n      <form @submit=\"login\">\r\n        <input type=\"email\" v-model=\"email\" placeholder=\"邮箱\" required v-on:input=\"validateEmail\" />\r\n        <span v-if=\"emailError\" class=\"error\">{{ emailError }}</span>\r\n        <input type=\"password\" v-model=\"password\" placeholder=\"密码\" required />\r\n        <input type=\"checkbox\" v-model=\"rememberMe\" /> 记住我\r\n        <button type=\"submit\">登录</button>\r\n      </form>\r\n      <button @click=\"showLogin = false\">取消</button>\r\n    </div>\r\n\r\n    <div class=\"modal\" v-if=\"showRegister\">\r\n      <h2>注册</h2>\r\n      <form @submit=\"register\">\r\n        <input type=\"email\" v-model=\"email\" placeholder=\"邮箱\" required v-on:input=\"validateEmail\" />\r\n        <span v-if=\"emailError\" class=\"error\">{{ emailError }}</span>\r\n        <input type=\"password\" v-model=\"password\" placeholder=\"密码\" required />\r\n        <input type=\"checkbox\" v-model=\"termsAccepted\" /> 我已阅读并接受服务条款\r\n        <button type=\"submit\" :disabled=\"!termsAccepted\">注册</button>\r\n      </form>\r\n      <button @click=\"showRegister = false\">取消</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios'\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      showLogin: false,\r\n      showRegister: false,\r\n      email: '',\r\n      password: '',\r\n      user: null,\r\n      emailError: '',\r\n      rememberMe: false,\r\n      termsAccepted: false,\r\n      showLoading: true, // 新增的属性\r\n    }\r\n  },\r\n  methods: {\r\n    validateEmail() {\r\n      const re = /^[\\w-]+(\\.[\\w-]+)*@([\\w-]+\\.)+[a-zA-Z]{2,7}$/\r\n      if (!re.test(this.email)) {\r\n        this.emailError = '请输入有效的电子邮件地址'\r\n      } else {\r\n        this.emailError = ''\r\n      }\r\n    },\r\n    login(event) {\r\n      this.showLoading = false\r\n      console.log(this.showLoading)\r\n      // event.preventDefault()\r\n      \r\n      axios.post('http://localhost:5400/login', {\r\n        email: this.email,\r\n        password: this.password,\r\n        rememberMe: this.rememberMe\r\n      })\r\n      .then(response => {\r\n        this.user = response.data\r\n        this.showLogin = false\r\n        this.showLoading = true\r\n      })\r\n      .catch(error => {\r\n        console.error('Error logging in:', error)\r\n      })\r\n    },\r\n    register(event) {\r\n      event.preventDefault()\r\n      this.showLoading = false\r\n      axios.post('http://localhost:5400/register', {\r\n        email: this.email,\r\n        password: this.password\r\n      })\r\n      .then(response => {\r\n        this.user = response.data\r\n        this.showRegister = false\r\n        this.showLoading = true \r\n      })\r\n      .catch(error => {\r\n        console.error('Error registering:', error)\r\n      })\r\n    },\r\n    logout() {\r\n           this.user = null\r\n           this.showLoading = true\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.user-actions {\r\n  display: flex;\r\n  justify-content: space-between;\r\n}\r\n\r\n.modal {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100vw;\r\n  height: 100vh;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n}\r\n\r\n.error {\r\n  color: red;\r\n  font-size: 0.8em;\r\n}\r\n</style>\r\n"],"mappings":"AAsCA,OAAOA,KAAI,MAAO,OAAM;AAExB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,KAAK;MAChBC,YAAY,EAAE,KAAK;MACnBC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE,EAAE;MACZC,IAAI,EAAE,IAAI;MACVC,UAAU,EAAE,EAAE;MACdC,UAAU,EAAE,KAAK;MACjBC,a