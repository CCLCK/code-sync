{"ast":null,"code":"export default {\n  components: {\n    'contact-us': ContactUs\n  },\n  data() {\n    return {\n      words: [{\n        word: 'apple',\n        definition: '一种常见的水果'\n      }, {\n        word: 'banana',\n        definition: '一种常见的黄色水果'\n      }, {\n        word: 'cat',\n        definition: '一种家养的小型猫科动物'\n      }],\n      currentWordIndex: 0,\n      isDefinitionVisible: false,\n      searchTerm: '',\n      focusLostCountdown: 0\n    };\n  },\n  methods: {\n    showDefinition() {\n      this.isDefinitionVisible = true;\n    },\n    nextWord() {\n      this.currentWordIndex = (this.currentWordIndex + 1) % this.words.length;\n      this.isDefinitionVisible = false;\n    },\n    searchWord() {\n      const index = this.words.findIndex(word => word.word === this.searchTerm);\n      if (index !== -1) {\n        this.currentWordIndex = index;\n        this.isDefinitionVisible = false;\n      } else {\n        alert('未找到该单词');\n      }\n    },\n    startCountdown() {\n      this.focusLostCountdown = 5;\n      const countdownInterval = setInterval(() => {\n        if (this.focusLostCountdown > 0) {\n          this.focusLostCountdown--;\n        } else {\n          clearInterval(countdownInterval);\n        }\n      }, 1000);\n    }\n  }\n};","map":{"version":3,"names":["components","ContactUs","data","words","word","definition","currentWordIndex","isDefinitionVisible","searchTerm","focusLostCountdown","methods","showDefinition","nextWord","length","searchWord","index","findIndex","alert","startCountdown","countdownInterval","setInterval","clearInterval"],"sources":["H:\\单词学习项目\\word_study\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- 添加一个头部 -->\n    <header>\n      <h1>Vocab Voyager</h1>\n      <nav>\n        <a href=\"#\">首页</a>\n        <a href=\"#\">关于我们</a>\n        <contact-us></contact-us>\n      </nav>\n    </header>\n\n    <!-- 搜索栏和卡片 -->\n    <div class=\"center-container\">\n      <!-- 搜索栏 -->\n      <div class=\"search-bar\">\n        <input v-model=\"searchTerm\" type=\"text\" placeholder=\"搜索单词...\" @keyup.enter=\"searchWord\">\n        <button @click=\"searchWord\">搜索</button>\n      </div>\n\n      <!-- 单词卡片 -->\n      <div id=\"card\" class=\"card\" @mouseleave=\"startCountdown\">\n        <h1>{{ words[currentWordIndex].word }}</h1>\n        <button @click=\"showDefinition\" :disabled=\"isDefinitionVisible\">显示定义</button>\n        <p v-show=\"isDefinitionVisible\">{{ words[currentWordIndex].definition }}</p>\n        <button @click=\"nextWord\">下一个单词</button>\n      </div>\n      <p v-if=\"focusLostCountdown > 0\" class=\"countdown\">焦点将在 {{ focusLostCountdown }} 秒后消失</p>\n    </div>\n\n    <!-- 添加一个底部 -->\n    <footer>\n      <p>©2023 Vocab Voyager</p>\n    </footer>\n  </div>\n</template>\n\n<script>\nexport default {\n  components: {\n    'contact-us': ContactUs,\n  },\n  data() {\n    return {\n      words: [\n        { word: 'apple', definition: '一种常见的水果' },\n        { word: 'banana', definition: '一种常见的黄色水果' },\n        { word: 'cat', definition: '一种家养的小型猫科动物' },\n      ],\n      currentWordIndex: 0,\n      isDefinitionVisible: false,\n      searchTerm: '',\n      focusLostCountdown: 0,\n    };\n  },\n  methods: {\n    showDefinition() {\n      this.isDefinitionVisible = true;\n    },\n    nextWord() {\n      this.currentWordIndex = (this.currentWordIndex + 1) % this.words.length;\n      this.isDefinitionVisible = false;\n    },\n    searchWord() {\n      const index = this.words.findIndex(word => word.word === this.searchTerm);\n      if (index !== -1) {\n        this.currentWordIndex = index;\n        this.isDefinitionVisible = false;\n      } else {\n        alert('未找到该单词');\n      }\n    },\n    startCountdown() {\n      this.focusLostCountdown = 5;\n      const countdownInterval = setInterval(() => {\n        if (this.focusLostCountdown > 0) {\n          this.focusLostCountdown--;\n        } else {\n          clearInterval(countdownInterval);\n        }\n      }, 1000);\n    },\n  },\n};\n</script>\n\n<style scoped>\nbody {\n  font-family: Arial, sans-serif;\n  background-color: #F2F2F2;\n  margin: 0;\n  padding: 0;\n}\n\nheader, footer {\n  background-color: #0066CC;\n  color: white;\n  padding: 20px;\n  text-align: center;\n}\n\nnav a {\n  color: white;\n  margin: 0 10px;\n  text-decoration: none;\n}\n\n.countdown {\n  color: #999;\n  font-size: 12px;\n  margin-top: 10px;\n}\n\n.search-bar {\n  margin: 20px;\n}\n\n.search-bar input {\n  padding: 15px;        /* 增大内边距 */\n  font-size: 18px;      /* 增大字体大小 */\n  border: 2px solid #0066CC;   /* 增加边框 */\n  border-radius: 5px;\n  width: 400px;         /* 增大搜索框长度 */\n  transition: box-shadow 0.3s ease;\n  background-color: #fff;  /* 改变背景颜色 */\n  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);  /* 添加阴影 */\n}\n.search-bar input:focus {\n  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);\n}\n\n.search-bar button {\n  margin-left: 10px;\n  padding: 10px;\n  font-size: 16px;\n  border: none;\n  border-radius: 5px;\n  background-color: #0066CC;\n  color: white;\n  cursor: pointer;\n  transition: background-color 0.3s ease;\n}\n\n.search-bar button:hover {\n  background-color: #004999;\n}\n\n.center-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  height: calc(100vh - 120px);\n}\n\n.card {\n  background-color: #F0F8FF;\n  color:  #333333;\n  width: 500px;\n  height: 300px;\n  border-radius: 20px;\n  box-shadow: 0px 10px 50px rgba(0, 0, 0, 0.1);\n  padding: 20px;\n  text-align: center;\n  transition: background-color 0.5s ease, box-shadow 0.5s ease, transform 0.5s ease; /* 添加box-shadow和transform的过渡效果 */\n  transition-delay: 5s; /* 添加过渡延迟 */\n  font-family: 'Helvetica Neue', Arial, sans-serif;\n  border: 1px solid #CCCCCC;\n}\n\n.card:hover {\n  box-shadow: 0 20px 40px 0 rgba(0,0,0,0.2);\n  transform: scale(1.05);\n  background-color: #FFFFE0;\n  transition-delay: 0s; /* 鼠标悬停时立即开始过渡效果 */\n}\n\n\n\nbutton {\nmargin-top: 20px;\npadding: 10px 20px;\nborder: none;\nborder-radius: 5px;\nbackground-color: #0066CC;\ncolor: white;\ncursor: pointer;\ntransition: background-color 0.3s ease;\n}\n\nbutton:hover {\nbackground-color: #004999;\n}\n\nbutton:disabled {\nbackground-color: #CCCCCC;\n}\n\nfooter {\nposition: fixed;\nbottom: 0;\nwidth: 100%;\n}\n</style>"],"mappings":"AAsCA,eAAe;EACbA,UAAU,EAAE;IACV,YAAY,EAAEC;EAChB,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,CACL;QAAEC,IAAI,EAAE,OAAO;QAAEC,UAAU,EAAE;MAAU,CAAC,EACxC;QAAED,IAAI,EAAE,QAAQ;QAAEC,UAAU,EAAE;MAAY,CAAC,EAC3C;QAAED,IAAI,EAAE,KAAK;QAAEC,UAAU,EAAE;MAAc,CAAC,CAC3C;MACDC,gBAAgB,EAAE,CAAC;MACnBC,mBAAmB,EAAE,KAAK;MAC1BC,UAAU,EAAE,EAAE;MACdC,kBAAkB,EAAE;IACtB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACJ,mBAAkB,GAAI,IAAI;IACjC,CAAC;IACDK,QAAQA,CAAA,EAAG;MACT,IAAI,CAACN,gBAAe,GAAI,CAAC,IAAI,CAACA,gBAAe,GAAI,CAAC,IAAI,IAAI,CAACH,KAAK,CAACU,MAAM;MACvE,IAAI,CAACN,mBAAkB,GAAI,KAAK;IAClC,CAAC;IACDO,UAAUA,CAAA,EAAG;MACX,MAAMC,KAAI,GAAI,IAAI,CAACZ,KAAK,CAACa,SAAS,CAACZ,IAAG,IAAKA,IAAI,CAACA,IAAG,KAAM,IAAI,CAACI,UAAU,CAAC;MACzE,IAAIO,KAAI,KAAM,CAAC,CAAC,EAAE;QAChB,IAAI,CAACT,gBAAe,GAAIS,KAAK;QAC7B,IAAI,CAACR,mBAAkB,GAAI,KAAK;MAClC,OAAO;QACLU,KAAK,CAAC,QAAQ,CAAC;MACjB;IACF,CAAC;IACDC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACT,kBAAiB,GAAI,CAAC;MAC3B,MAAMU,iBAAgB,GAAIC,WAAW,CAAC,MAAM;QAC1C,IAAI,IAAI,CAACX,kBAAiB,GAAI,CAAC,EAAE;UAC/B,IAAI,CAACA,kBAAkB,EAAE;QAC3B,OAAO;UACLY,aAAa,CAACF,iBAAiB,CAAC;QAClC;MACF,CAAC,EAAE,IAAI,CAAC;IACV;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}